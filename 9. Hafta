!! BU KISIM car_1.h'da


----------

//private, public olma zorunluluğu yoktr sentax hatası yoktur

class Base {
//private
virtual void vfunc()
{
std::cout << "Base::vfunc()\n";
}
};

class Der : public Base {
public:
virtual void vfunc()override
{
std::cout << "Base::vfunc()\n";
}
};

----------
//hata olmaz

class Base {
public:
virtual void vfunc()
{
std::cout << "Base::vfunc()\n";
}
};

class Der : public Base {
private:
virtual void vfunc()override
{
std::cout << "Base::vfunc()\n";
}
};

----------
//hata olmaz

class Base {
public:
virtual void vfunc()
{
std::cout << "Base::vfunc()\n";
}
};

class Der : public Base {
private:
virtual void vfunc()override
{
std::cout << "Base::vfunc()\n";
}
};


void gf(Base* p)
{
p->vfunc();
}

int main()
{
Der myder;
myder.vfunc(); //hata çıkar, erişim hatası
gf(&myder);
}

