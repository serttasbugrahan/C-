int main()
{
using namespace std;

std::vector<Car*> carvec;

for (int i = 0; i < 1000; ++i) {
carvec.push_back(create_random_car());
}
//range-based for loop
for (auto p : carvec) {
cout << *p << "\n";
p->start();
(void)getchar();
}
}






