int main()
{
using namespace std;
int x{}, y{};

int* p1 = &x;
int* p2 = &y;

p1 + p2;
}

---------------------------------

string sınıfı yazılardan sayılara
sayılardan yazılara dönüşüm olanapı verir

int main()
{
using namespace std;

to_string()
int ival{};
cout << "bir tam sayi giriniz: ";
cin >> ival;

auto str = to_string(ival);
cout << '|' << str << '|';

}

